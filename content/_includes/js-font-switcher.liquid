<script>
  (() => {
    const key = 'fonts-normal';
    if (sessionStorage.getItem(key) === 'true') {
      setClass(key);
    }
    const btns = document.querySelectorAll('[data-js="font-switcher"]');
    for (btn of btns) {
      btn.addEventListener('click', function (e) {
        e.preventDefault();
        setClass(key);
      });
    }
    function setClass (key) {
      document.documentElement.classList.toggle(key);
      sessionStorage.setItem(key, document.documentElement.classList.contains(key));
    }
  })();
</script>
